@model IEnumerable<StankinQuestionnaire.Areas.Admin.Models.ReviewerViewModel>
@{
    ViewBag.Title = "Редактирование проверяющих";
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Ф.И.О.</td>
                <td>Логин</td>
                <td>Доступные группы показателей</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var reviewer in Model)
            {
                <tr>
                    <td>@reviewer.Name</td>
                    <td>@reviewer.UserName</td>
                    <td>
                        <ul class="ul-list">
                            @foreach (var indicatorGroupName in reviewer.IndicatorGroupName)
                            {
                                <li>@indicatorGroupName</li>
                            }
                        </ul>
                    </td>
                    <td class="command-column">
                        <a class="btn btn-info" href="@Url.Action("Edit", new { id = @reviewer.Id })">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
