@model IEnumerable<StankinQuestionnaire.Areas.Admin.Models.AcademicRankCatalogViewModel>
@{
    ViewBag.Title = "Index";
}

<a href="@Url.Action("Add")" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Добавить
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Название</td>
            <td>Входит в группу</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var rank in Model)
        {
            <tr data-id="@rank.ID">
                <td>@rank.Title</td>
                <td>@rank.ParentName</td>
                <td class="command-column">
                    <a href="@Url.Action("Edit", new { id = rank.ID })" class="btn btn-info">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        </span>
                    </a>

                    <button type="button" class="btn btn-danger btn-delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true">
                        </span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@{Html.RenderPartial("_DeleteAlert", new StankinQuestionnaire.Areas.Admin.Models.DeleteObject { Name = "должность", Url = "Delete" });}




