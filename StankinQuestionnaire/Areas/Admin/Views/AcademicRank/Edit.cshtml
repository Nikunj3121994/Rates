@model StankinQuestionnaire.Areas.Admin.Models.AcademicRankCatalogEditModel
@{
    ViewBag.Title = "Редактирование";
}

@using (Html.BeginForm("Edit", "AcademicRank", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите название" } })
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ParentID, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.ParentID, Model.PossibleParent, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ParentID, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-ok" aria-hidden="true">
                </span> Сохранить
            </button>
        </div>
    </div>
}