@using StankinQuestionnaire.Web.Core.Status
@model IEnumerable<StankinQuestionnaire.Areas.Admin.Models.SubdivisionViewModel>
@{
    ViewBag.Title = "Подразделения";
}
@Html.GetStatus()
<a href="@Url.Action("Add")" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Добавить
</a>
<a class="btn btn-primary" href="@Url.Action("Rating")">
    Рейтинг
</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Название</td>
            <td>Описание</td>
            <td>Количество сотрудников</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var subvision in Model)
        {
            <tr data-id="@subvision.SubdivisionID">
                <td>@subvision.Name</td>
                <td>@subvision.Description</td>
                <td>@subvision.UsersCount</td>
                <td class="command-column">
                    <a href="@Url.Action("Edit", new { subdivisionID = subvision.SubdivisionID })" class="btn btn-info">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        </span>
                    </a>

                    <button type="button" class="btn btn-danger btn-delete">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true">
                        </span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@{Html.RenderPartial("_DeleteAlert", new StankinQuestionnaire.Areas.Admin.Models.DeleteObject { Name = "подразделение", Url = "Subdivision/Delete" });}