@model IEnumerable<StankinQuestionnaire.Data.Models.SubdivisionWithUsersCount>
@{
    ViewBag.Title = "Подразделения";
}

<table class="table table-striped">
    <thead>
        <tr>
            <td>Название</td>
            <td>Описание</td>
            <td>Количество сотрудников</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var subvision in Model)
        {
            <tr>
                <td>@subvision.Name</td>
                <td>@subvision.Description</td>
                <td>@subvision.UsersCount</td>
                <td class="command-column">
                    <button type="button" class="btn btn-info">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        </span>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true">
                        </span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
